<% include ./partials/header %>


<div class="ui main text container">
    <div class="ui huge header">RESTful Blog App</div>
    <div class="segment ui top attached">
        <div class="ui divided items">
            <% blogs.forEach(function(blog){ %>
                <div class="item">
                    <div class="image"><img src="<%= blog.image %>"></img></div>
                    <div class="content">
                        <a class="header" href="/"><%= blog.title %></a>
                        <div class="meta">
                            <span><%= blog.created.toDateString() %></span>
                        </div>
                        <div class="description">
                            <p><%- blog.body.substring(0,100) %>...</p>
                        </div>
                        <div class="extra"><a href="/blogs/<%= blog._id %>" class="ui floated basic violet button">Read More <i class="icon right chevron"></i></a></div>
                        
                    </div>
                </div>
             <% }); %> 
        </div>
    </div>   
</div>




 
 
<% include ./partials/footer %>